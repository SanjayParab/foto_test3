<h1>Sign In</h1>

<%= form_for(:session , :url=> sessions_path ) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
